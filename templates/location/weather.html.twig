{% extends "base.html.twig" %}

{% block subtitle %}
	Quand partir
{% endblock %}

{% block content %}

	<div class="imageandtitle">
		<img src="" alt="image monde" class="continentspec">
		<h2> {{name}} - Quand partir</h2>
	</div>

	<div class="links">
		<button class="continue post">
			<a href="{{ path('location_country_administratif', {name:name}) }}#administratif">Administratif</a>
		</button>
		<button class="continue post">
			<a href="{{ path('location_country_stuff', {name:name}) }}">Matériel</a>
		</button>
		<button class="continue post">
			<a href="{{ path('location_country', {name}) }}">Retour {{name}}</a>
		</button>
	</div>
	<section class="weather">
		<div>
			<p>Temps du moment :</p>
			<p>{{ weather.weather.0.description }}</p>
			<img class="icon-weather" src="http://openweathermap.org/img/w/{{ weather.weather.0.icon  }}.png" alt="Icon weather">
			<p>température  Min : {{ weather.main.temp_min|round }}°C, Max: {{ weather.main.temp_max|round }}°C, Ressenti:{{ weather.main.feels_like|round }}°C, Humidité:{{ weather.main.humidity }}%</p>

		</div>
	</section>
{% endblock %}
