{% extends "base.html.twig" %}

{% block subtitle %}
	Matériel
{% endblock %}

{% block content %}
	<div class="imageandtitle">
		<img src="#" alt="image monde" class="continentspec">
		<h2>{{country.name}}
			- Matériel</h2>
	</div>

	<div class="links">
		<button class="continue post">
			<a href="{{ path('location_country_administratif', {id:country.id}) }}#administratif">Administratif</a>
		</button>
		<button class="continue post">
			<a href="">Météo</a>
		</button>
		<button class="continue post">
			<a href="{{ path('location_country', {id:country.id}) }}">Retour au
				{{country.name}}
			</a>
		</button>
	</div>
    
	<div>Matériel nécessaire :
	</div>
	<ul>
		{% for stuff in stuffs %}

			<li>
				{{ stuff.name }}
			</li>

		{% endfor %}
	</ul>

{% endblock %}
