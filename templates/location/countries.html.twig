{% extends 'base.html.twig' %}

{% block subtitle %}
	- Pays
{% endblock %}

{% block content %}

	<div class="imageandtitle">
		<img src="" alt="image monde" class="continentspec">
		<h2>{{continent.name}}
			- Choisissez un pays</h2>
	</div>
	<h4>Liste des pays par continent</h4>
	<ul class="continentul">
		{% for country in countries %}
			<li class="continentli">
				<a href="{{ path('location_country', {id:country.id}) }}">{{ country.name }}</a>
			</li>
		{% endfor %}
	</ul>

{% endblock %}
