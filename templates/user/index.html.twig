{% extends 'base.html.twig' %}

{% block subtitle %}Votre espace{% endblock %}

{% block content %}



    <h5>Bienvenue dans votre compte, {{ user.nickname }}</h5>

    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('admin') }}"> Aller vers le Dashboard </a> <br>

    {% endif %}

    <div class="space">
        <h5>- Vos informations -</h5>
    </div>

            <div class="profiletable">

                <div class="avatarprofile">
                    <img src="" alt="photo de profil">
                </div>

                <div class="listData">
                    <p>Nom : {{ user.lastname }}</p>
                    <p>Prénom : {{ user.firstname }}</p>
                    <p>E-mail : {{ user.email }}</p>
                    <p>Date de naissance : {{ user.dateOfBirth|date('d/m/Y') }}</p>
                    <p>Pays : {{ user.country }}</p>
                    <p>liste des itinéraires/parcours</p>

                </div>

            </div>

        <p class="linkData"><a href="{{ path('user_update', {id:app.user.id}) }}">Modifiez vos données</a></p>


        <p class="linkData"><a href="{{ path('user_edit', {id:app.user.id}) }}">Modifiez votre mot de passe</a></p>

   

{% endblock %}
