{% extends 'base.html.twig' %}

{% block subtitle %}Connexion{% endblock %}

{% block content %}
<form method="post" class="form-post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h2 class="formspace">Veuillez vous connecter</h2>

        <div class="formwrapper">
            <div class="col">
                <div class="formgroup">
                <label for="inputEmail" class="formspace">Email : </label>
                <input type="email" value="{{ last_username }}" name="email"    id="inputEmail" class="formspace" placeholder="E-mail" autocomplete="email"  required autofocus></div>
            </div>
            <div class="col">
                <div class="formgroup">
                <label for="inputPassword" class="formspace">Mot de passe : </label>
                <input type="password" placeholder="Mot de passe" name="password" id="inputPassword"   class="formspace" autocomplete="current-password" required></div>
            </div>

                <div><input type="hidden" name="_csrf_token" value="{{ csrf_token   ('authenticate') }}"></div>

        

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
            <p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a></p>

            <button class="formspace buttonform" type="submit">
                Se connecter
            </button>

            </div>
                
        <div>
    <p>ou</p>
    <h3 class="h3 formspace buttonform"><a href ="{{ path('app_register') }}">~ INSCRIVEZ-VOUS ~</a></h3>
    </div>
</form>
{% endblock %}
