{% extends 'base.html.twig' %}

{% block subtitle %}Mot de passe oublié{% endblock %}

{% block content %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h2>Mot de passe oublié</h2>
        <div class="formwrapper">
            <div class="col">
                <div class="formgroup">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div class="small">
                            <small>
                                Veuillez entrer votre e-mail svp, un lien vous sera envoyé pour     réinitialiser           votre mot de passe.
                            </small>
                        </div>
                </div>
            </div>
        </div>
        
        <button class="buttonform2">Envoyer</button>
    {{ form_end(requestForm) }}
{% endblock %}
