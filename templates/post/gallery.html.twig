						{{ continent.name }}
					</a>
					<div class="carousel-inner">
						<img class="active2 item" src="{{ asset('img/asia/01.jpg')}}" alt="Picture1">
						{% for i in range(2, 3) %}
							<img class="item" src="{{ asset('img/asia/0' ~ (i) ~ '.jpg')}}" alt="Picture">
						{% endfor %}
					</div>
					<div class="arrows">
						<div class="arrow precedent">
							&lt;
						</div>
						<div class="arrow suivant">
