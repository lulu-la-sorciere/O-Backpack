{% extends 'base.html.twig' %}

{% block subtitle %}
	{{ title }}
{% endblock %}

{% block content %}
    <div class="imageandtitle">
        <p class="blog"></p>
        <h2>{{ title }}</h2>
    </div> 
    <button class="post">
		<a href="{{ path('blog_posts') }}">Retour aux articles</a>
	</button>

    <section>
        <div class="post">
            <div class="postleft">
                <figure class="postpic">
                    <img src="{{ asset('img/'~ post.picture)}}" alt="photo illustrant l'article">
                </figure>
            </div>
            <div class="postright">
                <h4>{{ title }}</h4>
                <article class="postbeginning">
                   {{post.content}}
                </article>
                <div>
                    <p><img class ="miniAvatarPost" src="{{ asset('img/'~ post.user.picture)}}" alt="photo de {{post.user.nickname}}"> {{post.user.nickname}} </p> 
                    <p>Le {{ post.publishedAt|date('d-m-Y') }}</p>
                </div>
            </div>
        </div>
    </section>
    
    <section >
    
        <p class="textb4form"> Ajouter un commentaire :<br><span class="it">(Vous devez être connecté)</span></p>

           {{ form_start(commentForm) }}

                <div class="centerform">
                    <div class="commentform">{{ form_row(commentForm.content) }}</div>
                </div>

                <button type="submit" class="sendcomment">Valider</button>

           {{ form_end(commentForm) }}

        {% for comment in comments %}
            <div class="post">
                <div class="commentProfile">
                    <div>
                        <img class ="miniAvatar" src="{{ asset('img/'~ comment.user.picture)}}" alt="{{comment.user.nickname}}">
                    </div> 
                    <div>
                        {{comment.user.nickname}}  - date : {{ comment.publishedAt|date('d-m-Y') }}
                    </div> 
                </div>
                <div class="fullComment">{{comment.content}}</div>
            </div> 
        {% endfor %}
    </section>
    <button class="post">
			<a href="{{ path('blog_posts') }}">Retour aux articles</a>
		</button>
{% endblock %}

